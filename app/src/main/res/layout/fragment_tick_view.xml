<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TickViewFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打对号"/>
        <com.mystudy.studyviews.views.TickView
            android:id="@+id/tv_tick"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <com.mystudy.studyviews.views.ExpandableBreathingButton
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <com.mystudy.studyviews.views.polygonView
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="500dp" />
    </LinearLayout>

</FrameLayout>